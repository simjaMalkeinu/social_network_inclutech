{{#each posts}}
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center mb-2 gap-2">
            <img src="https://via.placeholder.com/50" class="rounded-circle mr-3" alt="Profile Picture">
            <a href="/users/profile/{{id_user}}">
                <h6 class="mb-0">{{this.user.name}}</h6>
                <small class="text-muted">{{timeago this.date}}</small>
            </a>
        </div>
        <p class="card-text">{{text}}.</p>
        {{#if img}}
        <img src="/upload/{{img}}" class="img-fluid mb-2" alt="PublicaciÃ³n Imagen">
        {{/if}}
        <div class="post-actions d-flex justify-content-between mt-3">
            <a href="#" class="card-link"><i class="fas fa-thumbs-up"></i> Me gusta {{this.likes}} </a>
            <a href="/app/post/{{this.id}}" class="card-link"><i class="fas fa-comment"></i> Comentar</a>
            <a href="#" class="card-link"><i class="fas fa-share"></i> Compartir</a>
        </div>
    </div>
</div>

{{else}}

<div class="alert alert-info" role="alert">
    No hay publicaciones disponibles.
</div>
{{/each}}