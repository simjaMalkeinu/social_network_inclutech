<div class="col-md-6">
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2 gap-2">
                <img src="https://via.placeholder.com/50" class="rounded-circle mr-3" alt="Profile Picture">
                <a href="/users/profile/{{post.id_user}}">
                    <h6 class="mb-0">{{post.user.name}}</h6>
                    <small class="text-muted">{{post.date}}</small>
                </a>
            </div>
            <p class="card-text">{{post.text}}.</p>
            {{#if post.img}}
            <img src="/upload/{{post.img}}" class="img-fluid mb-2" alt="PublicaciÃ³n Imagen">
            {{/if}}
            <div class="post-actions d-flex justify-content-between mt-3">
                <a href="#" class="card-link"><i class="fas fa-thumbs-up"></i> Me gusta {{post.likes}} </a>
                <a href="/app/post/{{post.id}}" class="card-link"><i class="fas fa-comment"></i> Comentar</a>
                <a href="#" class="card-link"><i class="fas fa-share"></i> Compartir</a>
            </div>
        </div>
    </div>
</div>

<div class="col-md-4">
        <h2>Comentarios</h2>
        {{#if post.comments.length}}
          <ul class="list-group">
            {{#each post.comments}}
              <li class="list-group-item">
                <strong>{{this.author}}:</strong> {{this.text}} <br>
                <small class="text-muted">{{this.date}}</small>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>No hay comentarios.</p>
        {{/if}}
      </div>