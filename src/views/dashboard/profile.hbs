<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="{{user.avatar}}" class="rounded-circle img-fluid" alt="Avatar de {{user.name}}" style="width: 150px; height: 150px;">
                </div>
                <div class="col-md-9">
                    <h2>{{user.name}}</h2>
                    <h4>{{user.headline}}</h4>
                    <p>{{user.location}} · <a href="#">Información de contacto</a></p>
                    <p>Más de 500 contactos</p>
                    <div>
                        <button class="btn btn-primary">Enviar mensaje</button>
                        <button class="btn btn-outline-secondary">Siguiendo</button>
                        <button class="btn btn-outline-secondary">Más</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Información del perfil</h5>
                    <p>{{user.bio}}</p>
                    <h6>Educación</h6>
                    <ul class="list-group list-group-flush">
                        {{#each user.education}}
                            <li class="list-group-item">
                                <strong>{{this.degree}}</strong>
                                <p>{{this.institution}}</p>
                                <p><small>{{this.startDate}} - {{this.endDate}}</small></p>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Experiencia</h4>
                    <ul class="list-group list-group-flush">
                        {{#each user.experience}}
                            <li class="list-group-item">
                                <h5>{{this.title}}</h5>
                                <p><strong>{{this.company}}</strong></p>
                                <p><small>{{this.startDate}} - {{this.endDate}}</small></p>
                                <p>{{this.description}}</p>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Habilidades</h4>
                    <ul class="list-group list-group-flush">
                        {{#each user.skills}}
                            <li class="list-group-item">{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">Publicaciones recientes</h4>
                    <ul class="list-group list-group-flush">
                        {{#each posts}}
                            <li class="list-group-item">
                                <h5>{{this.text}}</h5>
                                <small>Publicado el {{this.date}}</small>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
