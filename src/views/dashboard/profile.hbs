<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="text-center col-md-3">
                    <img src="https://via.placeholder.com/200" class="rounded-circle" alt="Profile Picture">
                </div>
                <div class="col-md-9">
                    <h2>{{user.name}}</h2>
                    <h4>{{user.headline}}</h4>
                    <p><a href="#">{{user.email}}</a></p>
                    <p>Más de 500 contactos</p>
                    <div>
                        <button class="btn btn-primary" id="btn-start-chat" data-id="{{user.id}}" >Enviar mensaje</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5>Información del perfil</h5>
                    <p>{{user.name}}</p>
                    <h6>Educación</h6>
                    <ul class="list-group list-group-flush">
                        {{#each user.education}}
                        <li class="list-group-item">
                            <strong>{{this.degree}}</strong>
                            <p>{{this.institution}}</p>
                            <p><small>{{this.startDate}} - {{this.endDate}}</small></p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
